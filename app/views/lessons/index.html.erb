<h1>Full Stack Web Dev. With React</h1>

<div class="panel-group" id="accordion_track">
  <% @topics.each do |topic| %>
  <div class="panel panel-default">
      <div class="panel-heading">
          <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion_track" <%="href = #collapse_topic_#{topic.id}"%>>
                <%= topic.title %>
              </a>
          </h4>
      </div>
      <div <%="id = collapse_topic_#{topic.id}"%> class="panel-collapse collapse">
          <div class="panel-body">
              <div class="panel-group" <%="id=accordion_topic_#{topic.id}"%>>
                <% topic.units.each do |unit| %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" <%="data_parent=#accordion_topic_#{unit.topic.id}"%> <%="href=#collapse_#{unit.topic.id}_#{unit.id}"%>>
                              <%= unit.title %>
                            </a>
                        </h4>
                    </div>
                    <div <%="id=collapse_#{unit.topic.id}_#{unit.id}"%> class="panel-collapse collapse">
                      <div class='panel-body'>
                        <% unit.lessons.each do |lesson| %>
                          <%= content_tag :div, lesson.title %>
                        <% end %>
                      </div>
                    </div>
                </div>
                <% end %>
              </div>
          </div>
      </div>
  </div>
  <% end %>
</div>
