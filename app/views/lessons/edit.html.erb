<%= render partial: 'breadcrumbs', locals: {lesson: @lesson} %>
<%= render partial: 'submenu', locals: {lesson: @lesson} %>
<h3>
  <%= status_icon_for(@lesson) %>
  <%= type_icon_for(@lesson) %>
  <%= link_to @lesson.title, @lesson.url, target: '_blank' %>
</h3>

<div class='tags'>
  <h4>Tags:</h4>
  <%= render partial: 'tags_form', locals: {lesson: @lesson} %>
</div>

<div class='notes'>
  <h4>
    Notes:
  </h4>
  <% if @note %>
    <p>
      <%= @note.content %>
    </p>
    <%= link_to 'Edit', edit_lesson_note_path(@lesson,@note) %>
  <% else %>
    <p>
       You have no notes for this lesson.
    </p>
    <%= link_to 'Create Note', new_lesson_note_path(@lesson) %>
  <% end %>
</div>
