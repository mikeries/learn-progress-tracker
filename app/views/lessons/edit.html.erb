<%= render partial: 'breadcrumbs', locals: {lesson: @lesson} %>
<%= render partial: 'submenu', locals: {lesson: @lesson} %>
<h3>
  <%= status_icon_for(@lesson) %>
  <%= type_icon_for(@lesson) %>
  <%= link_to @lesson.title, @lesson.url, target: '_blank' %>
</h3>

<div class='tags'>
  <h4>Tags:</h4>
  <div>
    <%= form_for @lesson do |f| %>

      <% if current_student.tags.empty? %>
        <p>
          You have not created any tags yet.
        </p>
      <% else %>
        <%= f.collection_check_boxes :tag_ids, current_student.tags.distinct, :id, :category %><br>
      <% end %>

      <%= f.fields_for :tags, Tag.new do |tag_form| %>
        <%= tag_form.label :category, "New Tag" %>
        <%= tag_form.text_field :category %>
      <% end %>

      <%= f.submit 'Create' %>
    <% end %>
  </div>
</div>

<div class='notes'>
  <h4>
    Notes:
  </h4>
  <% if @note %>
    <p>
      <%= @note.content %>
    </p>
    <%= link_to 'Edit', edit_lesson_note_path(@lesson,@note) %>
  <% else %>
    <p>
       You have no notes for this lesson.
    </p>
    <%= link_to 'Create Note', new_lesson_note_path(@lesson) %>
  <% end %>
</div>
