  <div class="panel panel-default">
      <div class="panel-heading">
        <a data-toggle="collapse" <%= data_parent_for(unit) %> <%= href_for(unit) %>>
          <h4 class="panel-title">
                <%= unit.title %>
                <span class="pull-right"><%= "#{unit.completed_lessons} of #{unit.lessons.count}" %></span>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%">

                </div>
              </div>
          </h4>
        </a>
      </div>
      <div <%= collapse_id_for(unit) %> class="panel-collapse collapse">
        <div class='panel-body'>
          <% unit.lessons.each do |lesson| %>
            <div>
              <%= type_icon_for(lesson) %>
              <%= link_to lesson.title, lesson_path(lesson.id) %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
